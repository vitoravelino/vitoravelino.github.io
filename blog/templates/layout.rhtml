        <header class="header" role="banner">
            <h1 class="fleft">Vítor Avelino</h1>
            <nav>
                <ul id="main-menu" class="main-menu fright" role="navigation">
                    <li class="menu-item home"><a data-page="home" href="/"><%= t.terms.home %></a></li>
                    <li class="menu-item blog selected"><a data-page="blog" href="/blog"><%= t.terms.blog %></a></li>
                    <li class="menu-item projects"><a data-page="projects" href="/projects"><%= t.terms.projects %></a></li>
                    <li class="menu-item contact"><a data-page="contact" href="/contact"><%= t.terms.contact %></a></li>
                </ul>
            </nav>
        </header>

        <div id="main" class="main" data-type="blog">
            <%= yield %> 

            <aside class="column-right sidebar">
                <div class="sidebar-column">
                    <section class="about sidebar-block">
                        <h2>Sobre</h2>
                        <img class="fleft" src="http://cloudfront.vitoravelino.net/images/me80.jpg" alt="Vítor Avelino" title="Vítor Avelino" />
                        <p><%= t.blog.about.paragraph1 %></p>
                        <p><%= t.blog.about.paragraph2 %></p>
                    </section>
                    <section class="sidebar-block">
                        <form method="get" action="http://www.google.com/search">
                            <fieldset>
                                <input type="hidden" value="http://vitoravelino.net/blog" name="sitesearch">
                                <input class="search-input" type="text" placeholder="<%= t.blog.search %>" name="q">
                                <button class="visuallyhidden" type="submit"></button>
                            </fieldset>
                        </form>
                    </section>
                </div> <!-- .sidebar-column -->
                <div class="sidebar-column">
                    <div class="feed sidebar-block">
                        <span class="icon rss"></span>
                        <p><%= t.blog.feed %></p>
                    </div>

                    <section class="links sidebar-block">
                        <h3>Links</h3>
                        <ul>
                            <li><a href="http://www.instigatorblog.com" target="_blank">instigator blog</a></li>
                            <li><a href="http://highscalability.com/" target="_blank">High Scalability</a></li>
                            <li><a href="http://computingonclouds.wordpress.com/" target="_blank">Nas Nuvens</a></li>
